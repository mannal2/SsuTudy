<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/base_layout"/>

    <ImageView
        android:id="@+id/user_image_view"
        android:src="@drawable/circle"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="30dp"
        />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="Nickname"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="120dp"
        />
    <TextView
        android:id="@+id/user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="12345678"
        android:layout_marginTop="128dp"
        android:layout_marginLeft="120dp"
        />
    <Button
        android:id="@+id/menu_friend_request"
        style="@style/Button.SettingsMenu"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="180dp"
        android:text="친구 요청"
        />
    <ImageView
        android:id="@+id/request_notification_dot"
        android:src="@drawable/notification_dot"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="112dp"
        android:visibility="invisible"
        />
    <Button
        android:id="@+id/menu_category_settings"
        style="@style/Button.SettingsMenu"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="235dp"
        android:text="카테고리 관리"
        />
    <TextView
        style="@style/Button.SettingsMenu"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="290dp"
        android:text="프로필 설정"
        />
    <Button
        android:id="@+id/menu_edit_user_image"
        style="@style/Button.SettingsMenuSmall"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="345dp"
        android:text="이미지 변경"
        />
    <Button
        android:id="@+id/menu_edit_user_name"
        style="@style/Button.SettingsMenuSmall"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="395dp"
        android:text="닉네임 변경"
        />
    <Button
        android:id="@+id/logout_button"
        style="@style/Button.SettingsMenuSmall"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="445dp"
        android:paddingStart="30dp"
        android:text="로그아웃"
        android:textColor="#E53935"/>

</FrameLayout>