<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CourseWatchFragment"
    android:background="@color/white">

    <EditText
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:id="@+id/course_watch_editText"
        android:layout_centerHorizontal="true"
        android:background="@drawable/mediumblue_border"
        android:hint="공부장소"
        android:gravity="center"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/course_watch_editText"
        android:id="@+id/temp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/mediumblue_border">
        <Spinner
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/course_watch_spinner"
            android:textAlignment="center"
            android:textSize="16sp"/>
    </LinearLayout>
    
    <TextView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/temp"
        android:id="@+id/circle_time_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="00:00"
        android:gravity="center"
        android:textSize="70sp"
        android:background="@drawable/circle_border"/>

    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circle_time_text"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true">

        <android.widget.Button
            android:id="@+id/write"
            style="@style/Button.DarkBlue"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="기록"
            android:layout_alignParentStart="true"
            android:enabled="false"
            />

        <android.widget.Button
            android:id="@+id/start_stop_continue"
            style="@style/Button.MediumBlue"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="시작"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>

</RelativeLayout>